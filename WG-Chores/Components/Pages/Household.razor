@page "/household/{Code}"
@using WG_Chores.Data
@inject IHouseholdService HouseholdService
@inject NavigationManager Nav

<PageTitle>Household</PageTitle>

<div class="container p-4">
    @if (loading)
    {
        <div>Loading...</div>
    }
    else if (household == null)
    {
        <div class="alert alert-warning">Household not found.</div>
        <button class="btn btn-link" @onclick="GoHome">Back</button>
    }
    else
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Welcome</h5>
                <p class="text-muted">This is a sample household page. Soon you will be able to manage chores and members here.</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Chores (sample)</h6>
                        @if (household.Chores == null || !household.Chores.Any())
                        {
                            <div class="text-muted">No chores yet.</div>
                        }
                        else
                        {
                            <ul class="list-group">
                                @foreach (var c in household.Chores.OrderByDescending(x => x.CreatedAt))
                                {
                                    <li class="list-group-item">@c.Title</li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public string? Code { get; set; }

    private WG_Chores.Data.Household? household;
    private bool loading = true;

    protected override async Task OnParametersSetAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        loading = true;
        if (string.IsNullOrWhiteSpace(Code))
        {
            household = null;
        }
        else
        {
            household = await HouseholdService.GetByCodeAsync(Code!);
        }
        loading = false;
        StateHasChanged();
    }

    private async Task Refresh() => await Load();

    private void GoHome() => Nav.NavigateTo("/");
}
