# Environment variables for production (copy to .env and customize)
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80
# Default SQLite location inside container
ConnectionStrings__Default=Data Source=/app/wgchores.db
# Optional: Docker compose will map port 8080 -> 80 by default
HOST_PORT=8080
# Example image tag for CI/CD
IMAGE_TAG=wg-chores:latest
